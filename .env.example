# Example environment variables for Sherlock React App
# Copy this file to .env and fill in the values.

# RPC URL for Monad Testnet (Alchemy, Ankr, etc.)
# e.g. https://monad-testnet.g.alchemy.com/v2/YOUR_API_KEY
REACT_APP_MONAD_RPC_URL="https://monad-testnet.g.alchemy.com/v2/CHANGE_ME"

# SIWE Configuration
# SIWE expected domain (used on server verify); set to your deploy domain or dev host:port
REACT_APP_SIWE_DOMAIN="localhost:3000"

# SIWE nonce expiration in minutes
REACT_APP_SIWE_EXP_MINUTES="5"

# Set to true when backend verification is ready
REACT_APP_SIWE_REQUIRE_SERVER="false"

# Backend API URL (local development)
# In production, set this to your deployed backend
REACT_APP_BACKEND_URL="http://localhost:4000"

# Optional: BlockVision API key (frontend). In most cases verification is done server-side.
REACT_APP_BLOCKVISION_API_KEY="your_blockvision_key_or_leave_empty"

# Optional: Fallback / provider selection flags
# If true, forces fallback behaviour for verification (dev only)
FORCE_FALLBACK=false

# If true (backend + frontend aligned), BlockVision becomes the primary indexer
USE_BLOCKVISION_PRIMARY="false"


