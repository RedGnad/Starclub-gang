# Backend Configuration (example)

# Server
PORT=4000
NODE_ENV=development

# Database (SQLite dev)
DATABASE_URL="file:./dev.db"

# BlockVision API Configuration (Production Blockchain Verification)
# Keep this secret, do not commit real values
BLOCKVISION_API_KEY="your_blockvision_api_key_here"

# Monad RPC Configuration (fallback / primary when BlockVision disabled)
MONAD_RPC_URL="https://monad-testnet.g.alchemy.com/v2/YOUR_API_KEY"

# Toggle to use BlockVision as primary indexer for user interactions
USE_BLOCKVISION_PRIMARY=false
